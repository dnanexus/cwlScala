{
    "cwlVersion": "v1.2",
    "class": "Workflow",
    "inputs": [
        {
            "type": {
                "type": "array",
                "items": {
                    "type": "record",
                    "name": "instr",
                    "fields": [
                        {
                            "name": "instr",
                            "type": "string"
                        }
                    ]
                }
            },
            "id": "inp1"
        },
        {
            "type": {
                "type": "array",
                "items": "string"
            },
            "id": "inp2"
        }
    ],
    "outputs": [
        {
            "outputSource": "step1/echo_out",
            "type": {
                "type": "array",
                "items": {
                    "type": "array",
                    "items": "string"
                }
            },
            "id": "out"
        }
    ],
    "requirements": [
        {
            "class": "ScatterFeatureRequirement"
        },
        {
            "class": "StepInputExpressionRequirement"
        },
        {
            "class": "SubworkflowFeatureRequirement"
        },
        {
            "class": "InlineJavascriptRequirement"
        }
    ],
    "steps": [
        {
            "in": [
                {
                    "source": "inp1",
                    "valueFrom": "$(self.instr)",
                    "id": "echo_in1"
                },
                {
                    "source": "inp2",
                    "id": "echo_in2"
                },
                {
                    "source": "inp1",
                    "valueFrom": "$(self[0].instr)",
                    "id": "first"
                }
            ],
            "out": [
                "echo_out"
            ],
            "scatter": [
                "echo_in1",
                "echo_in2"
            ],
            "scatterMethod": "nested_crossproduct",
            "run": {
                "class": "CommandLineTool",
                "id": "step1command",
                "inputs": [
                    {
                        "type": "string",
                        "inputBinding": {
                            "position": 1
                        },
                        "id": "first"
                    },
                    {
                        "type": "string",
                        "inputBinding": {
                            "position": 2
                        },
                        "id": "echo_in1"
                    },
                    {
                        "type": "string",
                        "inputBinding": {
                            "position": 3
                        },
                        "id": "echo_in2"
                    }
                ],
                "outputs": [
                    {
                        "type": "string",
                        "outputBinding": {
                            "glob": "step1_out",
                            "loadContents": true,
                            "outputEval": "$(self[0].contents)"
                        },
                        "id": "echo_out"
                    }
                ],
                "baseCommand": "echo",
                "arguments": [
                    "-n",
                    "foo"
                ],
                "stdout": "step1_out",
                "requirements": [
                    {
                        "class": "InlineJavascriptRequirement"
                    }
                ]
            },
            "id": "step1"
        }
    ]
}