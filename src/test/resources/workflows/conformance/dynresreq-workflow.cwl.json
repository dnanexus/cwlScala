{
    "class": "Workflow",
    "cwlVersion": "v1.2",
    "inputs": [
        {
            "type": "File",
            "id": "special_file"
        }
    ],
    "outputs": [
        {
            "type": "File",
            "outputSource": "report/output",
            "id": "cores"
        }
    ],
    "steps": [
        {
            "in": [
                {
                    "source": "special_file",
                    "id": "special_file"
                }
            ],
            "out": [
                "output"
            ],
            "run": {
                "class": "CommandLineTool",
                "requirements": [
                    {
                        "coresMin": "$(inputs.special_file.size)",
                        "coresMax": "$(inputs.special_file.size)",
                        "class": "ResourceRequirement"
                    },
                    {
                        "class": "InlineJavascriptRequirement"
                    }
                ],
                "inputs": [
                    {
                        "type": "File",
                        "id": "special_file"
                    }
                ],
                "outputs": [
                    {
                        "type": "stdout",
                        "id": "output"
                    }
                ],
                "baseCommand": "echo",
                "stdout": "cores.txt",
                "arguments": [
                    "$(runtime.cores)"
                ]
            },
            "id": "count"
        },
        {
            "in": [
                {
                    "source": "count/output",
                    "id": "file1"
                }
            ],
            "out": [
                "output"
            ],
            "run": {
                "class": "CommandLineTool",
                "inputs": [
                    {
                        "type": "File",
                        "id": "file1"
                    }
                ],
                "outputs": [
                    {
                        "type": "File",
                        "outputBinding": {
                            "glob": "output"
                        },
                        "id": "output"
                    }
                ],
                "baseCommand": [
                    "cat"
                ],
                "stdin": "$(inputs.file1.path)",
                "stdout": "output",
                "requirements": [
                    {
                        "class": "InlineJavascriptRequirement"
                    }
                ]
            },
            "id": "report"
        }
    ],
    "requirements": [
        {
            "class": "SubworkflowFeatureRequirement"
        },
        {
            "class": "InlineJavascriptRequirement"
        }
    ]
}