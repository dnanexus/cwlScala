{
    "cwlVersion": "v1.2",
    "requirements": [
        {
            "class": "DockerRequirement",
            "dockerPull": "debian:stretch-slim"
        },
        {
            "class": "InlineJavascriptRequirement"
        },
        {
            "class": "ShellCommandRequirement"
        }
    ],
    "class": "CommandLineTool",
    "inputs": [
        {
            "type": {
                "type": "array",
                "items": "File"
            },
            "secondaryFiles": [
                {
                    "pattern": ".fai",
                    "required": true
                },
                {
                    "pattern": ".crai",
                    "required": false
                },
                ".bai?",
                "${ if (inputs.require_dat) {return '.dat'} else {return null} }",
                "${ return null; }",
                {
                    "pattern": ".dat2",
                    "required": "$(inputs.require_dat)"
                }
            ],
            "id": "fasta_path"
        },
        {
            "type": [
                "null",
                "boolean"
            ],
            "id": "require_dat"
        }
    ],
    "outputs": [
        {
            "type": "File",
            "outputBinding": {
                "glob": "fai.list"
            },
            "secondaryFiles": [
                ".bai?",
                {
                    "pattern": "${ return null }"
                }
            ],
            "id": "bai_list"
        }
    ],
    "arguments": [
        {
            "valueFrom": "${ var fai_list = \"\"; for (var i = 0; i < inputs.fasta_path.length; i ++) { fai_list += \" cat \" + inputs.fasta_path[i].path +\".fai\" + \" >> fai.list && \" } return fai_list.slice(0,-3) }",
            "position": 1,
            "shellQuote": false
        }
    ],
    "baseCommand": []
}